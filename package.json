{
  "name": "mobile-example",
  "version": "1.0.0",
  "description": "Example of a mobile application using Expo and pear libraries",
  "main": "expo-router/entry",
  "scripts": {
    "clean": "ROOT=$(git rev-parse --show-toplevel); watchman watch-del $ROOT; watchman watch-project $ROOT",
    "prebuild": "rm -rf .pear && ../pear/pear.dev run ./scripts/pearbuild.js",
    "build:pearend": "node scripts/rnbuild.js",
    "build:pearend:watch": "nodemon --watch node_modules/pear-mobile --ext js,mjs,cjs --exec npm run build:pearend",
    "start": "npm run build:pearend && expo start -d",
    "ios": "expo run:ios",
    "cios": "npm run clear && npm run ios",
    "android": "expo run:android",
    "dev:ios": "npm run prebuild && concurrently --kill-others npm:build:pearend:watch npm:ios",
    "cdev:ios": "npm run clear && npm run dev:ios",
    "dev:android": "npm run prebuild && concurrently --kill-others npm:build:pearend:watch npm:android",
    "clear": "rm -rf .expo/cache && rm -rf node_modules/.cache"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@react-navigation/core": "^6.4.17",
    "b4a": "^1.6.7",
    "bare-rpc": "^0.2.6",
    "bare-url": "^2.3.1",
    "events": "^3.3.0",
    "expo": "^53.0.9",
    "expo-build-properties": "^0.14.6",
    "expo-linking": "^7.1.5",
    "expo-router": "^5.0.6",
    "expo-system-ui": "^5.0.7",
    "hypercore-crypto": "^3.6.1",
    "hyperswarm": "^4.15.1",
    "pear-link": "^4.2.1",
    "pear-mobile": "file:../pear-mobile/pear-mobile-1.0.0.tgz",
    "pear-pipe": "file:../pear-pipe/pear-pipe-1.0.6.tgz",
    "pear-run": "file:../pear-run/pear-run-1.0.7.tgz",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.6",
    "react-native-bare-kit": "^0.11.4",
    "react-native-safe-area-context": "5.4.0"
  },
  "devDependencies": {
    "@types/b4a": "^1.6.4",
    "@types/react": "~19.0.10",
    "bare-pack": "^1.4.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "prettier-config-standard": "^7.0.0",
    "typescript": "~5.8.3"
  }
}
